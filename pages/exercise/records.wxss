.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.header {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  padding: 40rpx 30rpx;
  color: #fff;
  border-radius: 0 0 30rpx 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.records-list {
  margin-top: 20rpx;
  padding: 0 30rpx;
  flex: 1;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.record-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 5rpx rgba(0, 0, 0, 0.03);
}

.record-item::after {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(135deg, #ff9800, #ff6d00);
}

.record-date {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 16rpx;
}

.record-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-type {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.record-stats {
  display: flex;
  gap: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 28rpx;
  color: #ff6d00;
  font-weight: 500;
}

.record-arrow {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.record-arrow image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.empty-state {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 28rpx;
  padding: 0 30rpx;
  text-align: center;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}

.empty-state text {
  margin-bottom: 40rpx;
}

.create-btn {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(255, 152, 0, 0.2);
}