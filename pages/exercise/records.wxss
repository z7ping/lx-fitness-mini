  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

.record-right {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.delete-btn {
  padding: 10rpx;
}