.container {
  padding: 20rpx;
}

.stats-overview {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin: 20rpx 0;
}

.stat-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stat-label {
  display: block;
  color: #666;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.stat-value {
  display: block;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.charts-container {
  margin-top: 30rpx;
}

.chart-wrapper {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  height: 400rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.loading {
  margin: 40rpx auto;
  text-align: center;
}

ec-canvas {
  width: 100%;
  height: 100%;
}