.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 0;
  display: flex;
  flex-direction: column;
}

.header {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  padding: 40rpx 30rpx;
  color: #fff;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
}

.form-content {
  flex: 1;
  padding: 20rpx;
}

/* 打卡类型选择器 */
.type-selector {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.type-item {
  flex: 1;
  margin: 0 10rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.type-item.active {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  color: #fff;
}

.type-item van-icon {
  margin-bottom: 12rpx;
}

.type-item.active van-icon {
  color: #fff !important;
}

.type-item text {
  font-size: 28rpx;
  margin-top: 8rpx;
}

/* 表单样式 */
.form-group {
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.custom-cell {
  padding: 24rpx !important;
}

.cell-title {
  font-size: 28rpx !important;
  color: #333 !important;
}

/* 地图样式 */
.location-map {
  width: 100%;
  height: 300rpx;
  margin: 20rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 提交按钮 */
.submit-btn {
  margin-top: 40rpx;
  padding: 0 20rpx 40rpx;
}

/* 渐变按钮 */
.gradient-btn {
  background: linear-gradient(135deg, #ff9800, #ff6d00) !important;
  border: none !important;
  border-radius: 12rpx !important;
  color: #fff !important;
  font-size: 32rpx !important;
  font-weight: 500 !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
}

.van-popup {
  border-radius: 24rpx 24rpx 0 0 !important;
}