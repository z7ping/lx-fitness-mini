/* pages/auth/login.wxss */
.auth-container {
  padding: 40rpx;
  box-sizing: border-box;
  background: #fff;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.auth-content {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.auth-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.auth-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.auth-items {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.auth-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.auth-item-text {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #333;
}

.auth-tips {
  margin-bottom: 30rpx;
}

.tip-text {
  display: block;
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
}

.btn-area {
  margin-bottom: 30rpx;
}

.auth-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff6b35;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
  border: none;
}

.auth-btn-active {
  opacity: 0.9;
}

.cancel-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
}

.cancel-btn-active {
  background: #f0f0f0;
}

.privacy-policy {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

.link {
  color: #ff6b35;
  display: inline;
} 