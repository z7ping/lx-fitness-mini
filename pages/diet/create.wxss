.container {
  padding: 32rpx;
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: calc(150rpx + env(safe-area-inset-bottom));
}

.form-section {
  margin: 24rpx 0;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: linear-gradient(to right, rgba(255, 140, 0, 0.1), transparent);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 自定义单元格样式 */
.custom-cell-group {
  padding: 16rpx 0;
}

.custom-cell {
  padding: 24rpx !important;
}

.cell-title {
  font-size: 28rpx !important;
  font-weight: 500 !important;
  color: #333 !important;
}

.cell-value {
  font-size: 28rpx !important;
  color: #666 !important;
}

.highlight-value {
  color: #FF8C00 !important;
  font-weight: 600 !important;
}

/* 营养比例样式 */
.nutrition-ratio {
  display: flex;
  gap: 16rpx;
}

.ratio-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  min-width: 120rpx;
}

.ratio-label {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.ratio-value {
  font-size: 28rpx;
  font-weight: 600;
}

.protein {
  color: #2196f3;
  background: rgba(33, 150, 243, 0.1);
}

.carbs {
  color: #4caf50;
  background: rgba(76, 175, 80, 0.1);
}

.fat {
  color: #f44336;
  background: rgba(244, 67, 54, 0.1);
}

/* 三餐卡片样式 */
.meal-section {
  padding: 16rpx;
}

.meal-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  position: relative;
  transition: all 0.3s ease;
}

.meal-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(135deg, #FF8C00, #FF6347);
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 140, 0, 0.05);
  border-bottom: 1rpx solid rgba(255, 140, 0, 0.1);
}

.meal-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.meal-title text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.meal-calories {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.calories-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF8C00;
}

.calories-unit {
  font-size: 24rpx;
  color: #999;
}

.food-list {
  padding: 16rpx;
}

.food-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.food-name {
  font-size: 28rpx;
  color: #333;
}

.food-amount {
  font-size: 26rpx;
  color: #666;
  background: #f7f8fa;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.add-food {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx;
  color: #FF8C00;
  font-size: 28rpx;
  transition: all 0.3s ease;
  background: rgba(255, 140, 0, 0.05);
  border-radius: 16rpx;
  margin: 16rpx;
}

.add-food:active {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 推荐食谱样式 */
.recipe-list {
  padding: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  justify-content: space-between;
}

.recipe-card {
  width: 48%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 16rpx;
}

.recipe-info {
  padding: 12rpx;
}

.recipe-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.recipe-calories {
  font-size: 22rpx;
  color: #ff9800;
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.98);
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
}

.save-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #FF8C00 0%, #FF6347 100%);
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.save-btn.disabled {
  background: #cccccc;
  opacity: 0.5;
  box-shadow: none;
}

/* 日期选择弹窗 */
.custom-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  z-index: 1;
  animation: slideUp 0.3s ease-out;
}

.day-picker-header {
  text-align: center;
  padding-bottom: 32rpx;
}

.day-picker-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.day-picker-content {
  display: flex;
  flex-wrap: wrap;
  padding: 32rpx 0;
  justify-content: center;
  gap: 32rpx;
}

.day-option {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  font-size: 28rpx;
  color: #333;
  background: #f7f7f7;
  transition: all 0.3s;
}

.day-option.selected {
  background: linear-gradient(135deg, #FF8C00 0%, #FF6347 100%);
  color: #fff;
  font-weight: bold;
  transform: scale(1.05);
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 0, 0.3);
}

.day-option:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.day-picker-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 32rpx;
  gap: 24rpx;
}

.cancel-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  color: #666;
  border: none;
}

.orange-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FF8C00 0%, #FF6347 100%);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 0, 0.3);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 热量设置弹窗样式 */
