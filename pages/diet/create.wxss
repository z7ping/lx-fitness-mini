.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.form-section {
  margin: 24rpx 16rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 营养比例样式 */
.nutrition-ratio {
  display: flex;
  gap: 16rpx;
}

.ratio-item {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.protein {
  color: #2196f3;
  background: rgba(33, 150, 243, 0.1);
}

.carbs {
  color: #4caf50;
  background: rgba(76, 175, 80, 0.1);
}

.fat {
  color: #f44336;
  background: rgba(244, 67, 54, 0.1);
}

/* 三餐卡片样式 */
.meal-section {
  padding: 16rpx;
}

.meal-card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
}

.meal-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.meal-title van-icon {
  color: #ff9800;
}

.meal-calories {
  font-size: 24rpx;
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.food-list {
  padding: 16rpx;
}

.food-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.food-amount {
  font-size: 24rpx;
  color: #666;
}

.add-food {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  color: #1296db;
  font-size: 28rpx;
}

/* 推荐食谱样式 */
.recipe-list {
  padding: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.recipe-card {
  width: calc(50% - 8rpx);
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.recipe-image {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
}

.recipe-info {
  padding: 12rpx;
}

.recipe-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.recipe-calories {
  font-size: 22rpx;
  color: #ff9800;
}

/* 底部按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 日期选择器样式 */
.day-picker {
  padding: 24rpx;
}

.day-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.day-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 24rpx 0;
}

.day-item {
  width: calc(25% - 12rpx);
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.day-item.active {
  background: #ff9800;
  color: #fff;
}

.day-picker-footer {
  padding-top: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}

/* 热量设置弹窗样式 */
.calories-dialog {
  padding: 24rpx;
}

.calories-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.calories-content {
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.calories-tip {
  font-size: 24rpx;
  color: #999;
}

.calories-footer {
  padding-top: 24rpx;
  border-top: 1rpx solid #f5f5f5;
} 