.container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

/* 分类标签样式 */
.category-tabs {
  background: #fff;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.tabs-scroll {
  white-space: nowrap;
  padding: 0 16rpx;
}

.tab-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin: 0 8rpx;
  font-size: 28rpx;
  color: #666;
  background: #f8f9fa;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #fff;
  background: linear-gradient(135deg, #ff9800, #ff6d00);
}

/* 食材列表样式 */
.food-list {
  flex: 1;
  padding: 16rpx;
}

.food-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.food-info {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 16rpx;
}

.food-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  background: #f5f5f5;
}

.food-detail {
  flex: 1;
}

.food-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.nutrition-info {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.nutrition-info text {
  font-size: 22rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.calories {
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
}

.protein {
  color: #2196f3;
  background: rgba(33, 150, 243, 0.1);
}

.carbs {
  color: #4caf50;
  background: rgba(76, 175, 80, 0.1);
}

.fat {
  color: #f44336;
  background: rgba(244, 67, 54, 0.1);
}

/* 空状态样式 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-tip van-icon {
  margin-bottom: 16rpx;
}

/* 数量选择弹窗样式 */
.amount-dialog {
  padding: 24rpx;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 32rpx;
  font-weight: 500;
}

.dialog-content {
  padding: 24rpx 0;
}

.selected-food {
  margin-bottom: 24rpx;
}

.selected-food .food-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.unit-text {
  font-size: 26rpx;
  color: #666;
}

.amount-input {
  display: flex;
  justify-content: center;
  margin: 24rpx 0;
}

.nutrition-preview {
  background: #f8f9fa;
  padding: 16rpx;
  border-radius: 12rpx;
}

.preview-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.preview-content {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.preview-content text {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.dialog-footer {
  padding-top: 24rpx;
  border-top: 1rpx solid #f5f5f5;
} 