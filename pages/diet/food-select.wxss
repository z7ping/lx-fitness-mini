.container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

/* 分类标签样式 */
.category-tabs {
  background: #fff;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.tabs-scroll {
  white-space: nowrap;
  padding: 0 16rpx;
}

.tab-item {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin: 0 8rpx;
  font-size: 28rpx;
  color: #666;
  background: #f8f9fa;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #fff;
  background: linear-gradient(135deg, #ff9800, #ff6d00);
}

/* 食材列表样式 */
.food-list {
  flex: 1;
  padding: 16rpx;
}

.food-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.food-info {
  flex: 1;
  margin-right: 16rpx;
}

.food-detail {
  flex: 1;
}

.food-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #ff9800;
  margin-bottom: 8rpx;
}

.nutrition-info {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.nutrition-info text {
  font-size: 22rpx;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.calories {
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
}

.protein {
  color: #2196f3;
  background: rgba(33, 150, 243, 0.1);
}

.carbs {
  color: #4caf50;
  background: rgba(76, 175, 80, 0.1);
}

.fat {
  color: #f44336;
  background: rgba(244, 67, 54, 0.1);
}

/* 空状态样式 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-tip van-icon {
  margin-bottom: 16rpx;
}

/* 数量选择弹窗样式 */
.amount-dialog {
  padding: 24rpx;
}

.dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 32rpx;
  font-weight: 500;
}

.dialog-content {
  padding: 24rpx 0;
}

.selected-food {
  margin-bottom: 24rpx;
}

.selected-food .food-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #ff9800;
  margin-bottom: 8rpx;
}

.unit-text {
  font-size: 26rpx;
  color: #666;
}

.amount-input {
  display: flex;
  justify-content: center;
  margin: 24rpx 0;
}

.nutrition-preview {
  background: #f8f9fa;
  padding: 16rpx;
  border-radius: 12rpx;
}

.preview-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.preview-content {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.preview-content text {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.dialog-footer {
  padding-top: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}

.dialog-footer .van-button {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  background: linear-gradient(135deg, #FF8C00 0%, #FF6347 100%);
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.dialog-footer .van-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 设置数量弹窗 */
.custom-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: relative;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  z-index: 1;
  animation: slideUp 0.3s ease-out;
}

.amount-header {
  text-align: center;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.amount-header .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.amount-content {
  padding: 32rpx 0;
}

.food-info {
  text-align: center;
  margin-bottom: 24rpx;
}

.food-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.food-unit {
  font-size: 26rpx;
  color: #666;
}

.amount-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin: 32rpx 0;
}

.amount-display .value {
  font-size: 48rpx;
  font-weight: 600;
  color: #FF8C00;
  line-height: 1;
}

.amount-display .unit {
  font-size: 28rpx;
  color: #999;
  margin-left: 8rpx;
}

.amount-control {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.custom-stepper {
  --button-background-color: #FF8C00 !important;
  --button-color: #fff !important;
  --input-background-color: #f7f8fa !important;
  --input-font-size: 32rpx !important;
  --input-font-weight: 600 !important;
  --button-round: true !important;
}

.nutrition-info {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.nutrition-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.nutrition-item .label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.nutrition-item .value {
  font-size: 28rpx;
  font-weight: 500;
  color: #FF8C00;
}

.amount-footer {
  display: flex;
  justify-content: space-between;
  padding-top: 32rpx;
  gap: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}

.cancel-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  color: #666;
  border: none;
}

.orange-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FF8C00 0%, #FF6347 100%);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 0, 0.3);
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}