.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f7f8fa;
}

.device-list {
  flex: 1;
  margin-bottom: 120rpx;
}

.device-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.device-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.device-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.device-status.connected {
  background-color: #e8f5e9;
  color: #4caf50;
}

.device-details {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
}

.detail-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.detail-item .value {
  font-size: 28rpx;
  color: #333;
}

.device-actions {
  display: flex;
  justify-content: flex-end;
}

.sync-btn {
  min-width: 160rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  margin-bottom: 20rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.05);
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  line-height: 1.6;
}

.empty-state text:first-of-type {
  margin-bottom: 8rpx;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-state text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.bottom-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.bottom-button button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
  background: linear-gradient(135deg, #1296db 0%, #0f85c2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.2);
  font-weight: 500;
}

.bottom-button button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 4rpx rgba(18, 150, 219, 0.2);
}