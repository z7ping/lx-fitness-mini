.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f7f8fa;
}

.scan-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.scan-status text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.device-list {
  margin-top: 20rpx;
}

.device-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.device-item.selected {
  background-color: #e8f5e9;
  border: 2rpx solid #4caf50;
}

.device-info {
  display: flex;
  flex-direction: column;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.device-debug-info {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #eee;
}

.debug-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-family: monospace;
}

.device-id {
  font-size: 24rpx;
  color: #999;
}

.device-status {
  font-size: 24rpx;
  color: #4caf50;
  background-color: #e8f5e9;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
  display: inline-block;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin: 10rpx 0;
}

.bottom-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.bottom-buttons .common-btn {
  flex: 1;
}

.scan-btn,
.bind-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 44rpx;
  border: none;
  background: linear-gradient(135deg, #1296db 0%, #0f85c2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.2);
  font-weight: 500;
  text-align: center;
  transition: all 0.3s ease;
}

.scan-btn:active,
.bind-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 4rpx rgba(18, 150, 219, 0.2);
  opacity: 0.9;
}

.scan-btn[disabled],
.bind-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

.device-list {
  margin-top: 20rpx;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

.scan-button {
  margin-bottom: 20rpx;
}

.bind-button {
  margin-bottom: env(safe-area-inset-bottom);
}