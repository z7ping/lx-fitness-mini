.time-slots {
  padding: 0 16rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom)); /* 兼容底部安全区域 */
}

.time-slot-group {
  margin-bottom: 32rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 编辑模式下的时间段样式 */
.edit-mode .time-slot-group {
  border: 1rpx solid rgba(255, 152, 0, 0.3);
  border-radius: 12rpx;
}

.time-slot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-slot-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.time-slot-title van-icon {
  color: #ff9800;
}

.time-slot-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 添加动作按钮 */
.add-exercise-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  margin: 16rpx;
  background: rgba(255, 152, 0, 0.1);
  border: 1rpx dashed #ff9800;
  border-radius: 8rpx;
  color: #ff9800;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.add-exercise-btn:active {
  background: rgba(255, 152, 0, 0.2);
}

.add-exercise-btn van-icon {
  margin-right: 8rpx;
}

/* 占位符样式 */
.exercise-item .add-icon {
  color: #ff9800;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  background: rgba(255, 152, 0, 0.1);
  border-radius: 50%;
  padding: 10rpx;
}

/* 占位符项目样式优化 */
.exercise-item[data-time-slot] {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.exercise-item[data-time-slot] .exercise-name {
  color: #ff9800;
  font-size: 28rpx;
}

.exercise-item[data-time-slot]:active {
  background-color: rgba(255, 152, 0, 0.05);
}

.completion-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 24rpx;
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

.completion-status.completed {
  background: rgba(76, 175, 80, 0.1);
  color: #4caf50;
}

/* 时间段操作按钮样式 */
.time-slot-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.copy-btn, .delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.copy-btn {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
}

.delete-btn {
  background: rgba(255, 77, 79, 0.1);
  color: #ff4d4f;
