.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 0;
  /* padding-bottom: calc(120rpx + env(safe-area-inset-bottom)); */
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.today-header {
  background: linear-gradient(135deg, #FF6B00, #FF9800);
  padding: 40rpx 32rpx;
  color: #fff;
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-info {
  display: flex;
  flex-direction: column;
}

.today-date {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.today-weekday {
  font-size: 28rpx;
  opacity: 0.95;
  font-weight: 500;
}

.plan-status {
  background: rgba(255, 255, 255, 0.25);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10px);
}

.status-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 内容区域样式 */
.content-area {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #999;
}

/* 计划卡片样式 */
.plan-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.plan-card:active {
  transform: scale(0.98);
  background: #f8f9fa;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.plan-info {
  flex: 1;
  margin-right: 24rpx;
}

.plan-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 16rpx;
}

.plan-meta {
  display: flex;
  gap: 16rpx;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.plan-duration,
.plan-level,
.plan-category {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.plan-duration {
  background: rgba(255, 107, 0, 0.12);
  color: #FF6B00;
}

.plan-level {
  background: rgba(255, 152, 0, 0.12);
  color: #FF9800;
}

.plan-category {
  background: rgba(255, 183, 77, 0.12);
  color: #FFB74D;
}

.plan-desc {
  font-size: 28rpx;
  color: #666;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.5;
}

.plan-action {
  padding: 16rpx;
  opacity: 0.7;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1px solid rgba(0, 0, 0, 0.05);
}

.empty-state van-icon {
  margin-bottom: 32rpx;
  opacity: 0.7;
}

.empty-state text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
}

.empty-state text:last-child {
  font-size: 28rpx;
  margin-top: 12rpx;
  color: #999;
}

/* 底部按钮样式 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  gap: 24rpx;
  z-index: 100;
}

.custom-btn,
.ai-btn {
  flex: 1;
  height: 88rpx !important;
  border-radius: 44rpx !important;
  font-size: 30rpx !important;
  font-weight: 600 !important;
}

.custom-btn {
  background: #FF6B00 !important;
  border: none !important;
  color: #fff !important;
}

.ai-btn {
  background: rgba(255, 107, 0, 0.1) !important;
  border: none !important;
  color: #FF6B00 !important;
}