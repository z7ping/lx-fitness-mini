.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 计划名称容器 */
.plan-name-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.plan-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.plan-name-input {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #ff9800;
  padding: 10rpx 0;
}

.plan-name-actions {
  margin-left: 20rpx;
}

.plan-name-actions van-icon {
  color: #666;
  font-size: 36rpx;
}

/* 模式切换组件样式 */
.mode-switch {
  display: flex;
  justify-content: center;
  padding: 16rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 101;
}

.mode-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  margin: 0 8rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.mode-item.active {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  color: #fff;
  font-weight: 500;
  box-shadow: 0 4rpx 8rpx rgba(255, 152, 0, 0.2);
}

.mode-item van-icon {
  margin-right: 8rpx;
}

.calendar-section {
  background: #fff;
  padding: 16rpx;
  margin-bottom: 2rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.calendar-month {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.calendar-days {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.calendar-day {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
}

.calendar-date {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.calendar-weekday {
  font-size: 24rpx;
  color: #666;
}

.calendar-day.active {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  border-radius: 8rpx;
}

.calendar-day.active .calendar-date,
.calendar-day.active .calendar-weekday {
  color: #fff;
}

.completion-status {
  padding: 6rpx 16rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
  font-weight: 500;
}

.completion-status.completed {
  background-color: rgba(76, 175, 80, 0.15);
  color: #2e7d32;
}

.completion-status.incomplete {
  background-color: rgba(255, 152, 0, 0.15);
  color: #e65100;
}

.time-slot {
  padding: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.06);
}

.plan-card {
  background: #fff;
  border-radius: 14rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.plan-card:active {
  transform: scale(0.98);
}

.plan-card-header {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2rpx 12rpx;
}

.tabs-nav {
  display: flex;
  padding: 12rpx;
  height: 56rpx;
  border-bottom: 1px solid #f0f0f0;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 0 0 auto;
  padding: 8rpx 20rpx;
  margin: 0 6rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #fff;
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  font-weight: 600;
}

.tab-content {
  padding: 16rpx;
  padding-bottom: calc(150rpx + env(safe-area-inset-bottom)); /* 兼容底部安全区域 */
}

.plan-list {
  margin-bottom: 20rpx;
  padding-bottom: 150rpx;
}

.van-cell-group {
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.van-cell-group__title {
  padding: 12rpx 16rpx 8rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.plan-exercises {
  padding: 0 16px;
}

.exercise-item {
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.exercise-header {
  margin-bottom: 12rpx;
}

.exercise-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.3;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.exercise-type {
  margin-left: 6rpx;
  padding: 2rpx 12rpx;
  font-size: 22rpx;
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
  border-radius: 8rpx;
}

.exercise-description {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.3;
}

.exercise-details {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 16rpx;
  background-color: rgba(255, 152, 0, 0.05);
  border-radius: 10rpx;
  margin: 12rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 2rpx 8rpx;
  background: #f8f9fa;
  border-radius: 6rpx;
}

.detail-label {
  font-size: 22rpx;
  color: #666;
  margin-right: 2rpx;
}

.detail-value {
  font-size: 22rpx;
  color: #333;
  font-weight: 500;
}

.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx calc(20rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  z-index: 100;
}

/* 不同模式下底部按钮样式 */
.edit-mode .bottom-buttons,
.training-mode .bottom-buttons {
  background-color: rgba(255, 255, 255, 0.95);
}

/* 复制功能按钮 */
.copy-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  background: rgba(255, 152, 0, 0.1);
  border-radius: 30rpx;
  color: #ff9800;
  font-size: 24rpx;
}

.copy-btn van-icon {
  margin-right: 4rpx;
}

.custom-btn, .ai-btn, .back-btn, .apply-btn {
  flex: 1;
  margin: 0 !important;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.custom-btn text, .ai-btn text, .back-btn text, .apply-btn text {
  display: inline-block;
  z-index: 1;
  position: relative;
}

.custom-btn {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.ai-btn {
  background: linear-gradient(135deg, #ff9800, #ff9800);
  opacity: 0.85;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.2);
}

.back-btn {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.apply-btn {
  background: linear-gradient(135deg, #ff9800, #ff9800);
  opacity: 0.85;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.2);
}

.btn-hover {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.custom-btn van-icon, .ai-btn van-icon, .back-btn van-icon, .apply-btn van-icon {
  margin-right: 8rpx;
  position: relative;
  z-index: 1;
}

.completed .exercise-name {
  color: #666666;
  text-decoration: line-through;
}

.completed .exercise-type {
  color: #999;
  background: rgba(153, 153, 153, 0.1);
}

.completed .exercise-description,
.completed .detail-label,
.completed .detail-value {
  color: #999;
}

/* 添加空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 32rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
  text-align: center;
}

.empty-actions {
  display: flex;
  justify-content: center;
}

.create-btn {
  min-width: 240rpx !important;
  border-radius: 24rpx !important;
  font-weight: normal !important;
}

/* 修改 section-title 样式使其更突出 */
.section-title {
  position: relative;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 24rpx 0 16rpx;
  padding: 0 16rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  left: 16rpx;
  bottom: -8rpx;
  width: 40rpx;
  height: 4rpx;
  background: #ff6d00;
  border-radius: 2rpx;
}

/* 调整饮食部分的空状态 */
.diet-section:empty {
  display: none;
}

.diet-list:empty {
  padding: 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.diet-list:empty::after {
  content: '暂无饮食安排';
}

/* 训练计划列表样式 */
.exercise-list {
  padding: 0;
}

.exercise-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.3s ease;
}

.exercise-item:last-child {
  border-bottom: none;
}

/* 编辑模式下的拖拽样式 */
.edit-mode .exercise-item {
  position: relative;
  padding-right: 80rpx;
}

.edit-mode .exercise-item:active {
  background-color: #f9f9f9;
}

.drag-handle {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 10rpx;
  color: #999;
}

.exercise-item.dragging {
  opacity: 0.7;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  position: relative;
}

/* 跟练模式下的样式 */
.training-mode .exercise-item {
  position: relative;
}

.exercise-timer {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  padding: 12rpx;
  background: rgba(255, 152, 0, 0.1);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #ff6d00;
  font-weight: 500;
}

.exercise-progress {
  margin-top: 16rpx;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #ff9800, #ff6d00);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.exercise-info {
  flex: 1;
  margin-right: 16rpx;
}

.exercise-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.exercise-name text:first-child {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.exercise-type {
  font-size: 24rpx;
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
}

.exercise-detail {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.exercise-time {
  color: #1296db;
  background: rgba(18, 150, 219, 0.1);
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
}

.exercise-params {
  color: #666;
}

.plan-name {
  color: #999;
}

.exercise-status {
  font-size: 24rpx;
  color: #ff9800;
  padding: 4rpx 16rpx;
  border: 1px solid #ff9800;
  border-radius: 24rpx;
}

.exercise-status.completed {
  color: #4caf50;
  border-color: #4caf50;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-tip van-icon {
  margin-bottom: 16rpx;
}

/* 编辑模式下空状态样式调整 */
.edit-mode .empty-tip {
  padding: 0;
  margin-top: 30rpx;
}

/* 添加时间段按钮 */
.add-time-slot-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  color: #ff9800;
  font-size: 30rpx;
  background-color: #fff5e6;
  border-radius: 12rpx;
  margin: 30rpx 0 60rpx; /* 增加底部间距，避免被底部按钮遮挡 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 32rpx);
}

/* 编辑模式下添加时间段按钮样式一致性 */
.empty-tip .add-time-slot-btn {
  margin-top: 30rpx;
  width: calc(100% - 32rpx);
}

.edit-mode-btn {
  background-color: #fff5e6;
  border: 1rpx dashed #ff9800;
}

.add-time-slot-btn van-icon {
  margin-right: 10rpx;
}

/* 饮食安排样式优化 */
.diet-section {
  margin-top: 32rpx;
}

.diet-list {
  padding: 0 16rpx;
}

.meal-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  padding: 24rpx;
  overflow: hidden;
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.meal-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.meal-title van-icon {
  margin-right: 12rpx;
  color: #ff9800;
}

.meal-content-container {
  padding: 16rpx 0;
}

.selected-foods {
  display: flex;
  flex-direction: column;
  /* margin-bottom: 16rpx; */
}

.food-item {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx dashed #f0f0f0;
}

.food-item:last-child {
  border-bottom: none;
}

.food-name {
  flex: 1;
}

.food-metrics {
  display: flex;
  align-items: center;
  color: #999;
}

.food-amount {
  color: #999;
  margin-right: 12rpx;
}

.food-weight {
  color: #ff9800;
  font-size: 24rpx;
}

.meal-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.meal-notes {
  display: flex;
  align-items: flex-start;
  margin-top: 16rpx;
  padding: 12rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.meal-notes van-icon {
  margin-right: 8rpx;
  flex-shrink: 0;
}

.meal-footer {
  padding-top: 16rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meal-nutrition {
  display: flex;
  flex-direction: column;
}

.calories {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff9800;
  margin-bottom: 8rpx;
}

.nutrition-detail {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.protein, .carbs, .fat {
  margin-right: 16rpx;
}

/* 计划类型切换 */
.plan-type-switch {
  display: flex;
  justify-content: center;
  padding: 16rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.switch-item {
  display: flex;
  align-items: center;
  padding: 12rpx 32rpx;
  margin: 0 8rpx;
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.switch-item.active {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  color: #fff;
}

.switch-item van-icon {
  margin-right: 8rpx;
}

/* 营养信息展示 */
.meal-nutrition {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 8rpx;
  padding: 8rpx;
  background: rgba(255, 152, 0, 0.05);
  border-radius: 8rpx;
}

.meal-nutrition text {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.calories {
  color: #ff9800;
  background: rgba(255, 152, 0, 0.1);
}

.protein {
  color: #2196f3;
  background: rgba(33, 150, 243, 0.1);
}

.carbs {
  color: #4caf50;
  background: rgba(76, 175, 80, 0.1);
}

.fat {
  color: #f44336;
  background: rgba(244, 67, 54, 0.1);
}

