.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: 40rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  color: #fff;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.content {
  padding: 30rpx;
}

.section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section.compact {
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.thanks-list, .contributor-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.thanks-item, .contributor-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: rgba(255, 152, 0, 0.05);
  border-radius: 12rpx;
}

.thanks-item text, .contributor-item text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.support-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.support-item {
  font-size: 26rpx;
  color: #666;
  background: rgba(255, 152, 0, 0.05);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.footer {
  text-align: center;
  padding: 30rpx;
  color: #666;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
} 