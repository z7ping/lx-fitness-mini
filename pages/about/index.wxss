.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 40rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  background-color: #fff;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.version {
  font-size: 24rpx;
  color: #999;
}

.content {
  flex: 1;
  padding: 0 30rpx;
}

.section {
  margin-top: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-content {
  padding: 30rpx;
}

.section-content text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.contact-list {
  display: flex;
  flex-direction: column;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-item van-icon {
  margin-right: 20rpx;
}

.contact-item text {
  font-size: 28rpx;
  color: #666;
}

/* 工具列表样式 */
.tool-list {
  display: flex;
  flex-direction: column;
}

.tool-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.tool-item:last-child {
  border-bottom: none;
}

.tool-item van-icon:first-child {
  margin-right: 20rpx;
}

.tool-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.tool-item van-icon:last-child {
  margin-left: 10rpx;
}

.footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 20rpx;
}

.footer text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
} 