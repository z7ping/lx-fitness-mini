.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.preview-image {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.preview-image image {
  width: 100%;
  height: 800rpx;
  border-radius: 8rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1.5;
}

.action-btn::after {
  display: none;
}

.action-btn image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #333;
}

.share-friend image {
  background: #07c160;
  border-radius: 50%;
  padding: 15rpx;
}

.share-moments image {
  background: #ff9800;
  border-radius: 50%;
  padding: 15rpx;
}

.save-album image {
  background: #2196f3;
  border-radius: 50%;
  padding: 15rpx;
} 