/* pages/training/strength.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.exercise-info {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.exercise-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
}

.exercise-details {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.label {
  font-size: 24rpx;
  color: #969799;
  margin-bottom: 10rpx;
}

.value {
  font-size: 36rpx;
  color: #323233;
  font-weight: bold;
}

.exercise-description {
  font-size: 28rpx;
  color: #646566;
  line-height: 1.5;
  padding-top: 20rpx;
  border-top: 1rpx solid #ebedf0;
}

.rest-timer {
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c3f 100%);
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  color: #fff;
  opacity: 0;
  transform: translateY(20rpx);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.rest-timer.show {
  opacity: 1;
  transform: translateY(0);
}

.timer-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.timer-value {
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.timer-progress {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  height: 6rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.progress-bar {
  background: #fff;
  height: 100%;
  transition: width 1s linear;
}

.timer-tip {
  font-size: 24rpx;
  opacity: 0.9;
}

.action-buttons {
  margin: 40rpx 0;
}

.primary-btn {
  background: #ff6b35;
  color: #fff;
  border: none;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.primary-btn:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

.secondary-btn {
  background: #fff;
  color: #ff6b35;
  border: 2rpx solid #ff6b35;
  border-radius: 8rpx;
  font-weight: 500;
}

.secondary-btn:active {
  background: #fff5f0;
}

.training-tips {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: auto;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #323233;
  margin-bottom: 20rpx;
}

.tip-list {
  color: #646566;
}

.tip-item {
  font-size: 28rpx;
  line-height: 1.8;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.tip-item::before {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: #ff6b35;
  border-radius: 50%;
  margin-right: 12rpx;
  flex-shrink: 0;
}