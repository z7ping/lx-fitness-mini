.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0;
  background: #f7f8fa;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

/* 地图容器样式 */
.map-container {
  width: 100%;
  height: 40vh;
  min-height: 300rpx;
  position: relative;
  overflow: hidden;
}

/* 地图组件样式 */
.running-map {
  width: 100%;
  height: 100%;
  position: relative;
}

@media screen and (max-width: 768px) {
  .running-map {
    height: 300rpx; /* 在小屏幕设备上使用固定高度 */
  }
}

/* 运动数据显示 */
.running-stats {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 运动准备信息 - 移到最顶部 */
.training-header {
  padding: 32rpx 24rpx;
  background: linear-gradient(135deg, #FF9800, #FF6B00);
  color: #fff;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.training-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.training-desc {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 运动建议卡片 */
.tips-card {
  margin: 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #e8f3ff 0%, #ffffff 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(18, 150, 219, 0.1);
  border: 2rpx solid rgba(18, 150, 219, 0.1);
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tips-header text {
  margin-left: 8rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #1296db;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
}

.tip-text {
  display: block;
  margin-bottom: 16rpx;
  line-height: 1.5;
  color: #333;
}

.tip-items {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.8);
  padding: 12rpx;
  border-radius: 8rpx;
}

.tip-item .van-icon {
  font-size: 28rpx;
  color: #1296db;
}

/* 目标设置 */
.goals-section {
  margin: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.goals-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.goal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.goal-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.goal-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 设备连接状态 */
.device-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin: 32rpx 24rpx;
  padding: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.device-status text {
  font-size: 28rpx;
  color: #333;
}

/* 底部控制按钮 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 24rpx;
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  z-index: 100; /* 确保在最上层 */
}

.bottom-buttons button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn {
  background: #FF9800;
  color: #fff;
  border: none;
}

.primary-btn[disabled] {
  background: #ccc !important;
  color: #fff !important;
}

.secondary-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
}

.primary-btn:active {
  opacity: 0.9;
}

.secondary-btn:active {
  background: #e0e0e0;
}