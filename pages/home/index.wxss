.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 0;
  display: flex;
  flex-direction: column;
}

/* 下拉刷新动画 */
.refresh-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  z-index: 101;
  transform: translateY(-100%);
  transition: transform 0.3s ease;
  background-color: #f7f8fa;
}

.refresh-container.active {
  transform: translateY(0);
}

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #ff9800;
  margin: 0 10rpx;
}

.dot:nth-child(1) {
  animation: bounce 1s infinite;
}

.dot:nth-child(2) {
  animation: bounce 1s infinite 0.2s;
}

.dot:nth-child(3) {
  animation: bounce 1s infinite 0.4s;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

/* 顶部固定区域 */
.user-overview {
  position: relative;
  z-index: 100;
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 内容区域可滚动 */
.content-area {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  box-sizing: border-box;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom)); 
}

/* 用户信息概览 - 更有活力的橙色渐变背景 */
.user-overview {
  background: linear-gradient(135deg, #ff9800, #ff6d00);
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  margin: 20rpx 20rpx 0 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-overview-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.user-text {
  flex: 1;
}

.name {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.today-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.weekday {
  margin-left: 10rpx;
}

.health-icon {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.health-info {
  display: flex;
  flex-direction: column;
}

.health-value {
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 600;
  line-height: 1.2;
}

.health-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
}

.health-unit {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 2rpx;
}

/* 左侧用户信息 */
.user-info {
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 16rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-right: 16rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.user-text {
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 4rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 200rpx;
}

.today-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
}

.weekday {
  margin-left: 8rpx;
  opacity: 0.9;
}

/* 右侧健康数据 - 固定三列布局 */
.health-data {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  width: 100%;
}

.health-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.15);
  padding: 10rpx 12rpx;
  border-radius: 12rpx;
  text-align: center;
  transition: transform 0.3s ease;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.health-item:active {
  transform: scale(0.95);
}

.health-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  line-height: 1.2;
  margin-bottom: 2rpx;
}

.health-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 装饰背景 */
.user-overview::after,
.user-overview::before {
  content: '';
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  z-index: 0;
}

.user-overview::before {
  top: -100rpx;
  right: -50rpx;
}

.user-overview::after {
  bottom: -120rpx;
  left: -80rpx;
} 

/* 健康数据卡片 - 减小内边距和图标大小 */
.health-card {
  margin: 16rpx 16rpx 16rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.1); /* 调整为橙色阴影 */
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stats-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.stats-item:active {
  transform: scale(0.98);
}

.stats-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  border-radius: 50%;
}

.calories-icon {
  background: rgba(255, 152, 0, 0.1);
}

.steps-icon {
  background: rgba(76, 175, 80, 0.1);
}

.duration-icon {
  background: rgba(33, 150, 243, 0.1);
}

.stats-info {
  display: flex;
  flex-direction: column;
}

.stats-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
}

.stats-label {
  font-size: 20rpx;
  color: #666;
  margin-top: 4rpx;
}

/* 今日计划卡片 */
